<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Ứng dụng Stress và Thư Giãn" Height="500" Width="850" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">
    <Grid>
        <!-- Nền gradient nhẹ -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#e0f7fa" Offset="0.0"/>
                <GradientStop Color="#ffffff" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Khối nội dung chính -->
        <Border Background="White" CornerRadius="15" Padding="20"
                Margin="30">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">

                <!-- Tiêu đề -->
                <TextBlock Text="Ứng dụng Theo Dõi Stress và Thư Giãn"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#37474F"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Các nút điều hướng -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <Button Content="Stress Analysis"
        Width="140" Height="40"
        Margin="10"
        Click="StressAnalysis_Click"
        Background="#FF6F61" Foreground="White"
        FontWeight="Bold"
        BorderBrush="#D84315"
        BorderThickness="1"
        Cursor="Hand"/>

                    <Button Content="Relax Zone"
        Width="140" Height="40"
        Margin="10"
        Click="RelaxZone_Click"
        Background="#4DB6AC" Foreground="White"
        FontWeight="Bold"
        BorderBrush="#00796B"
        BorderThickness="1"
        Cursor="Hand"/>

                </StackPanel>

                <!-- Nội dung động -->
                <Frame x:Name="MainContent"
                       Width="500"
                       Height="Auto"
                       Background="#FAFAFA"
                       BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
