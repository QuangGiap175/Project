<Page x:Class="WpfApp1.StressAnalysis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StressAnalysis" >

    <Grid>
        <StackPanel Margin="20" Background="#FFEFF7FF" Orientation="Vertical">
            <TextBlock Text="Phân Tích Mức Độ Stress"
                   FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            <TextBlock Text="Nhịp tim:"/>
            <TextBox x:Name="HeartRateTextBox" Width="100" Margin="0 5"/>

            <TextBlock Text="SpO2:"/>
            <TextBox x:Name="SpO2TextBox" Width="100" Margin="0 5"/>

            <Button Content="Phân tích" Click="AnalyzeButton_Click" Width="100" Margin="0 10"/>

            <TextBlock x:Name="ResultTextBlock"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="DarkBlue"/>
        </StackPanel>
    </Grid>
</Page>
