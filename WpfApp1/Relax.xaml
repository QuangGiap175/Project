<UserControl x:Class="WpfApp1.Relax"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFEFF7FF">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Thư Giãn - Mini Games" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                <Button Content="Bắn Bong Bóng" Width="120" Margin="5" Click="BubbleGame_Click"/>
                <Button Content="Click Nhanh" Width="120" Margin="5" Click="ClickGame_Click"/>
            </StackPanel>
            <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="14" Margin="10" Foreground="Blue"/>
            <Canvas x:Name="GameCanvas" Width="760" Height="360" Background="LightBlue" MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown" Visibility="Collapsed"/>
            <StackPanel x:Name="ClickGamePanel" Visibility="Collapsed">
                <TextBlock x:Name="ClickTimerText" Text="Thời gian: 10s" FontSize="14" Margin="10" Foreground="Green"/>
                <Button x:Name="ClickButton" Content="Click!" Width="100" Height="100" FontSize="20" Click="ClickButton_Click"/>
                <TextBlock x:Name="ClickCountText" Text="Số lần click: 0" FontSize="14" Margin="10" Foreground="Red"/>
                <TextBlock x:Name="HighScoreText" Text="Kỉ lục: 0" FontSize="14" Margin="10" Foreground="Purple"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>