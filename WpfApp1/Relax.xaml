<UserControl x:Class="WpfApp1.Relax"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFEFF7FF">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center" Width="760">

                <TextBlock Text="Thư Giãn - Mini Games" FontSize="22" FontWeight="Bold" Margin="0 0 0 20" Foreground="#2E7D32" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                    <Button Content="Bắn Bong Bóng" Width="140" Height="40" Margin="10" Click="BubbleGame_Click" Background="#4CAF50" Foreground="White"/>
                    <Button Content="Click Nhanh" Width="140" Height="40" Margin="10" Click="ClickGame_Click" Background="#2196F3" Foreground="White"/>
                    <Button Content="Lật Cặp Hình" Width="140" Height="40" Margin="10" Click="MemoryGame_Click" Background="#FF5722" Foreground="White"/>
                </StackPanel>

                <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" Margin="10" Foreground="#1976D2" HorizontalAlignment="Center"/>

                <!-- Game canvas -->
                <Canvas x:Name="GameCanvas" Width="720" Height="360" Background="#E0F7FA"
                        MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown"
                        Visibility="Collapsed" Margin="0,0,0,20"/>

                <!-- Click game -->
                <StackPanel x:Name="ClickGamePanel" Visibility="Collapsed" HorizontalAlignment="Center">
                    <TextBlock x:Name="ClickTimerText" Text="Thời gian: 10s" FontSize="16" Margin="10" Foreground="#388E3C" TextAlignment="Center"/>
                    <Button x:Name="ClickButton" Content="Click!" Width="120" Height="120" FontSize="24"
                            Click="ClickButton_Click" Background="#F06292" Foreground="White"/>
                    <TextBlock x:Name="ClickCountText" Text="Số lần click: 0" FontSize="16" Margin="10" Foreground="#D81B60"/>
                    <TextBlock x:Name="HighScoreText" Text="Kỉ lục: 0" FontSize="16" Margin="10" Foreground="#6A1B9A"/>
                </StackPanel>

                <!-- Memory game -->
                <StackPanel x:Name="MemoryGamePanel" Visibility="Collapsed">
                    <TextBlock x:Name="MemoryStatusText" Text="Tìm cặp hình!" FontSize="16" Margin="10" Foreground="#388E3C" HorizontalAlignment="Center"/>
                    <Border BorderBrush="#90CAF9" BorderThickness="2" CornerRadius="5" Background="#F5F5F5" Margin="0,10">
                        <UniformGrid x:Name="MemoryGrid" Columns="4" Width="720" Height="320" Margin="10"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
